<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:stretchColumns="1"
    tools:context=".CRU_StudentFragment">

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_span="2"
            android:text="Create/ Edit a student"
            android:textSize="25dp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints"></TextView>
    </TableRow>

    <TableRow android:layout_margin="5dp">

        <TextView
            android:layout_column="0"
            android:layout_marginHorizontal="10dp"
            android:text="Name:"
            android:textAlignment="textEnd"
            android:textSize="15dp"></TextView>

        <EditText
            android:id="@+id/studentNameEditText"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:background="#ffffff"
            android:hint="Enter your name"
            android:padding="5dp"
            android:textColor="#000000"
            android:textSize="15dp"></EditText>
    </TableRow>

    <TableRow android:layout_margin="5dp">

        <TextView
            android:layout_column="0"
            android:layout_marginHorizontal="10dp"
            android:text="Birthday:"
            android:textAlignment="textEnd"
            android:textSize="15dp"></TextView>

        <EditText
            android:id="@+id/studentDobEditText"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:background="#ffffff"
            android:clickable="true"
            android:hint="Enter your birthday"
            android:padding="5dp"
            android:textColor="#000000"
            android:textSize="15dp"></EditText>
    </TableRow>

    <TableRow android:layout_margin="5dp">

        <TextView
            android:layout_column="0"
            android:layout_marginHorizontal="10dp"
            android:text="Email:"
            android:textAlignment="textEnd"
            android:textSize="15dp"></TextView>

        <EditText
            android:id="@+id/studentEmailEditText"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:background="#ffffff"
            android:hint="Enter your email"
            android:padding="5dp"
            android:textColor="#000000"
            android:textSize="15dp"></EditText>
    </TableRow>

    <TableRow android:layout_margin="5dp">

        <TextView
            android:layout_column="0"
            android:layout_marginHorizontal="10dp"
            android:text="Address:"
            android:textAlignment="textEnd"
            android:textSize="15dp"></TextView>

        <EditText
            android:id="@+id/studentAddressEditText"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:background="#ffffff"
            android:hint="Enter your address"
            android:padding="5dp"
            android:textColor="#000000"
            android:textSize="15dp"></EditText>
    </TableRow>

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="@string/submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/previous"
        android:layout_margin="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</TableLayout>